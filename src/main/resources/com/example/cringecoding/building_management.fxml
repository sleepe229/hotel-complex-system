    <TableView fx:id="buildingTable" layoutX="20.0" layoutY="50.0" prefHeight="300.0" prefWidth="939.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="complexNameColumn" prefWidth="100.0" text="Complex Name" />
            <TableColumn fx:id="numberOfRoomsColumn" prefWidth="100.0" text="Number of Rooms" />
            <TableColumn fx:id="roomsPerFloorColumn" prefWidth="100.0" text="Rooms per Floor" />
