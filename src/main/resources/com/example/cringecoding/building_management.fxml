            <TableColumn fx:id="hasServiceColumn" prefWidth="57.0" text="Has Service" />
            <TableColumn fx:id="workStatusColumn" prefWidth="91.0" text="Work Status" />
            <TableColumn fx:id="lastStatusDateRechargeColumn" prefWidth="145.0" text="Last Status Date" />
