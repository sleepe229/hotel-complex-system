    <TextField fx:id="roomsPerFloorField" layoutX="569.0" layoutY="370.0" promptText="Rooms per Floor" />
    <TextField fx:id="roomTypeField" layoutX="734.0" layoutY="370.0" promptText="Room Type" />
    <TextField fx:id="hasFoodField" layoutX="20.0" layoutY="410.0" promptText="Has Food" />
    <TextField fx:id="hasServiceField" layoutX="150.0" layoutY="410.0" promptText="Has Service" />
    <TextField fx:id="workStatusField" layoutX="280.0" layoutY="410.0" promptText="Work Status" />
    <TextField fx:id="lastStatusDateRechargeField" layoutX="410.0" layoutY="410.0" promptText="Last Status Date (yyyy-MM-dd)" />

    <Button layoutX="715.0" layoutY="532.0" mnemonicParsing="false" onAction="#handleAddBuilding" text="Add" />
